{
	"version":"2.0.0",
	"tasks":[
		{
			"label": "build ROS nodes",
			"type": "shell",
			"command": "catkin_make",
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [],
			"runOptions": {
				"instanceLimit": 1
			}
		},
		{
            "label": "make_debug",
            "type": "catkin_make",
            "args": [
                "--directory",
                "${workspaceFolder}",
                "-DCMAKE_BUILD_TYPE=Debug", // This extra argument enables built with debug symbols
            ],
            "problemMatcher": [
                "$catkin-gcc"
            ]            
        },
		{
            "label": "rosCore",
            "type": "shell",
			"command": "roscore",
            "problemMatcher": [
                "$catkin-gcc"
            ],
			"runOptions": {
				"instanceLimit": 1
			}         
        },
		{
			"label": "build ROS code and launch",
			"type": "shell",
			"command": "catkin_make && roslaunch first_project launch.launch",
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [],
			"runOptions": {
				"instanceLimit": 1
			}
		},
		{
			"label": "plotjuggler",
			"type": "shell",
			"command": "rosrun plotjuggler plotjuggler",
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [],
			"runOptions": {
				"instanceLimit": 1
			}
		},
		{
			"label": "rqt configure",
			"type": "shell",
			"command": "rosrun rqt_reconfigure rqt_reconfigure",
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [],
			"runOptions": {
				"instanceLimit": 1
			}
		},
		{
			"label": "rviz",
			"type": "shell",
			"command": "rviz -d /home/polimi/robotics/src/first_project/lidar.rviz",
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [],
			"runOptions": {
				"instanceLimit": 1
			}
		}
	],
    "group": {
        "kind": "test",
        "isDefault": true
    }
}